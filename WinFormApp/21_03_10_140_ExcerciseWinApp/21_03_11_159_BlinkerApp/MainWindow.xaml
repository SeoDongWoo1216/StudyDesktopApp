<Window x:Class="_21_03_11_159_BlinkerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_21_03_11_159_BlinkerApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="450" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="56*"/>
            <RowDefinition Height="17*"/>
        </Grid.RowDefinitions>

        <Button x:Name="BtnStartBlink" Grid.Row="0" Grid.Column="0" Margin="10" Click="BtnStartBlink_Click" Content="" Background="Red"/>
        <Button x:Name="BtnStopBlick" Grid.Row="0" Grid.Column="1"  Margin="10" Click="BtnStopBlick_Click" Content="" Background="Green"/>
        <Label Content="Start Blinking" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Label Content="Stop Blinking" Grid.Column="1"  Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" />
    </Grid>
</Window>
