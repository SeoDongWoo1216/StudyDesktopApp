<Window x:Class="_210312_168_MonteCarloPiApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_210312_168_MonteCarloPiApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="495" Width="450" Initialized="Window_Initialized" WindowStartupLocation="CenterScreen">
    <DockPanel>
        <Grid x:Name="GrdMain" Margin="10" DockPanel.Dock="Top">
            <Canvas Name="CvsPi"  Height="400" Width="400">
                <Rectangle Stroke="Black" Width="400" Height="400"></Rectangle>
                <Ellipse Stroke="SlateBlue" Width="400" Height="400"></Ellipse>
            </Canvas>
        </Grid>
        <StatusBar DockPanel.Dock="Bottom" Margin="20,0,20,10">
            <TextBlock x:Name="TxtStatus" Text="Test"/>
        </StatusBar>
    </DockPanel>
</Window>
