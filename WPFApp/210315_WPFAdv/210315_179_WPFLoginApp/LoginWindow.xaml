<Window x:Class="_210315_179_WPFLoginApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_210315_179_WPFLoginApp"
        mc:Ignorable="d"
        Title="Login" Height="340" Width="300" Background="LightSteelBlue" WindowStartupLocation="CenterScreen"
        Initialized="Window_Initialized">
    <Grid Margin="20" Background="White">
        <StackPanel Margin="20">
            <Label Content="Login" FontSize="20" HorizontalAlignment="Center" Margin="10" />
            <Separator Background="Orange"/>
            <TextBlock Text="UserName" FontSize="16" Margin="0,5"/>
            <TextBox Name="TxtUserId" FontSize="14" Height="25" KeyDown="TxtUserId_KeyDown"/>
            <Label Content="Password" FontSize="16"/>
            <PasswordBox Name="TxtPassword" FontSize="14" Height="25" KeyDown="TxtPassword_KeyDown"/>
            <Button Name="BtnLogin" Content="로그인" FontSize="16" Width="100" Height="30" Margin="10,15" Click="BtnLogin_Click"/>
        </StackPanel>
    </Grid>
</Window>
